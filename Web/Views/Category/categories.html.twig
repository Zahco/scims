  <ul id="categories">
    {% for category in Model %}
      <a href="{{url('articlesByCategory', {'categoryId':category.Id})}}">
        {% if category.Color != null %}
          <li style="background-color:{{ category.Color }};">{{ category.Name }}</li>
        {% else %}
          <li>{{ category.Name }}</li>
        {% endif %}
        </a>
    {% endfor %}
  </ul>
